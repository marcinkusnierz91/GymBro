@model List<string>

<h2>Exercises</h2>

<div class="exercise-container">
    @foreach (var exercise in Model)
    {
        var imageUrl = Url.Content($"~/images/{exercise.Replace(" ", "%20")}.jpg");
        <div class="exercise-tile" style="background-image: url('@imageUrl');">
            <span>@exercise</span>
            <form asp-controller="Exercise" asp-action="AddExerciseToTraining" method="post" style="display:inline;">
                <input type="hidden" name="exerciseName" value="@exercise" />
                <input type="hidden" name="trainingId" value="@ViewBag.TrainingId" />
                <input type="hidden" name="dayOfMonth" value="@ViewBag.DayOfMonth" />
                <input type="hidden" name="month" value="@ViewBag.Month" />
                <input type="hidden" name="year" value="@ViewBag.Year" />
                <input type="hidden" name="musclePart" value="@ViewBag.MusclePart" />
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    }
</div>

<form asp-controller="Exercise" asp-action="SelectMusclePart" method="get">
    <input type="hidden" name="trainingId" value="@ViewBag.TrainingId" />
    <button type="submit" class="btn btn-secondary mt-3">Back</button>
</form>

<style>
.exercise-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.exercise-tile {
    background-color: #f8f9fa; /* Background color for each tile */
    background-size: cover; /* Fit the image to the size of the tile */
    background-position: center; /* Center the image within the tile */
    width: calc(33.333% - 10px); /* Fixed width of the tile */
    height: 200px; /* Fixed height of the tile */
    padding: 15px;
    margin-bottom: 15px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Shadow for a raised effect */
    transition: transform 0.3s ease; /* Transformation animation */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.exercise-tile:hover {
    transform: translateY(-5px); /* Raise the tile when hovered */
}

.exercise-tile span {
    font-weight: bold;
    font-size: 18px;
    display: block;
    background: rgba(255, 255, 255, 0.7); /* Semi-transparent background for the text */
    padding: 5px;
    border-radius: 5px;
    text-align: center; /* Center the text */
}

.btn {
    border-radius: 0; /* Remove button rounding */
}
</style>
