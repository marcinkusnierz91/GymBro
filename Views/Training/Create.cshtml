@model GymBro.Models.TrainingModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TrainingModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrainingDate" class="control-label"></label>
                <input asp-for="TrainingDate" class="form-control" />
                <span asp-validation-for="TrainingDate" class="text-danger"></span>
            </div>
            <input type="hidden" name="dayOfWeek" value="@ViewBag.DayOfWeek" />
            <input type="hidden" name="dayOfMonth" value="@ViewBag.DayOfMonth" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-dayOfWeek="@ViewBag.DayOfWeek" asp-route-dayOfMonth="@ViewBag.DayOfMonth">Back to List</a>
</div>


